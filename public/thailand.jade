include lib/common
+page('Thailand')
  div(ng-controller='ThailandPlaceController')
    section.header.thailand-page-header
      .container.header-content-wrapper
        p.header-content Thailand
    section.page-content-wrapper.overview-page-content-wrapper
      .row
        .col-md-3.col-sm-3.col-lg-3
          h1.filter-header.arabica Filters
          div(ng-repeat='filter in places_in_thailand.filters')
            div(class='{{"panel panel-" + filter.color}}')
              .panel-heading.arabica {{filter.name}}
              .panel-body.filter-check-wrapper
                .checkbox(ng-repeat='option in filter.tags')
                  label
                    input(type='checkbox', checked='checked')
                    | {{option.value}}


         
        .col-md-9.col-sm-9.col-lg-9
          h1.filter-header.arabica Internship Places
          .panel.panel-default(ng-repeat='place in places_in_thailand.places')
              ul.list-group
                li.list-group-item.internship-list
                  .media
                    .internship-rating-wrapper
                      p
                        span.glyphicon.glyphicon-heart.internship-rating(ng-if='place.rating>=1')
                        span.glyphicon.glyphicon-heart.internship-rating(ng-if='place.rating>=2')
                        span.glyphicon.glyphicon-heart.internship-rating(ng-if='place.rating>=3')
                        span.glyphicon.glyphicon-heart.internship-rating(ng-if='place.rating>=4')
                        span.glyphicon.glyphicon-heart.internship-rating(ng-if='place.rating>=5')
                        span.glyphicon.glyphicon-heart.internship-rating(ng-if='place.rating>=6')
                        = " "
                        | ({{place.reviews_count}})
                    .media-left
                      a(href='#')
                        img.media-object(src='assets/img/media.svg')
                    .media-body
                      .row.internship-info
                        a(ng-href='place#!/{{place.id}}').link-on-white
                          h4.media-heading {{place.full_name}}
                        |     {{place.address}}
                      .tags-wrapper(ng-repeat='tag in place.tags')
                        span.label.label-black.tags {{tag.name}}
