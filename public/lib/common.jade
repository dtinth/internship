
mixin page(title)
  doctype html
  html(ng-app='internship')
    head
      link(rel='stylesheet' href='/assets/css/bootstrap.min.css')
      link(rel='stylesheet' href='/assets/css/main-style.css')
      link(rel='stylesheet' href='/assets/css/main-components.css')
      if attributes.form
        link(rel='stylesheet' href='/assets/css/bootstrap-markdown.min.css')
        link(rel='stylesheet' href='/assets/css/select2.min.css')
        link(rel='stylesheet' href='/assets/css/datepicker.css')
    body
      +navbar
      block
      section.copyright-wrapper
        .copyright Â© 2011 SKE09 All Rights Reserved
      script(src='/assets/js/jquery.js')
      script(src='/assets/js/bootstrap.min.js')
      script(src='/assets/js/angular.min.js')
      script(src='/assets/js/internship.js')
      script(src='/assets/js/internship.api.js')
      script(src='/assets/js/internship.config.js')
      if attributes.form
        script(src='/assets/js/bootstrap-markdown.js')
        script(src='/assets/js/select2.min.js')
        script(src='/assets/js/bootstrap-datepicker.js')
        script(src='/assets/js/tags-select.js')

mixin navbar
  nav.navbar.navbar-grey.navbar-fixed-top
    .container-fluid
      // Brand and toggle get grouped for better mobile display
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#nav-menu')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='index') CPSK Internship
      // Collect the nav links, forms, and other content for toggling
      #nav-menu.collapse.navbar-collapse
        ul.nav.navbar-nav
          li
            a(href='thailand')
              | Thailand 
              span.sr-only (current)
          li
             a(href='overseas') Overseas
        ul.nav.navbar-nav.navbar-right(ng-controller='LoginController')
          li
            form.navbar-form.navbar-left(role='search')
              .input-group.nav-search-group
                input.form-control.nav-search-input(type='text', placeholder='Find Internship')
                span.input-group-btn
                  button.btn.btn-grey-to-white(type='button')
                    span.glyphicon.glyphicon-search.nav-search-btn
          li(ng-if='!Login.isLoggedIn')
             a(href='javascript://' ng-click='Login.login()') Login
          li(ng-if='Login.isLoggedIn')
             a(href='javascript://' ng-click='Login.logout()') Logout ({{Login.user.name}})
